<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Jgrasp\PrestashopMigrationPlugin\Command\PrestashopMigrationCommand">
            <argument type="service" id="Jgrasp\PrestashopMigrationPlugin\Importer\ResourceImporterCollection"/>
            <tag name="console.command" command="prestashop:migrate"/>
        </service>

        <service id="Jgrasp\PrestashopMigrationPlugin\Attribute\PropertyAttributeAccessor"/>

        <!-- MODEL TRANSFORMER -->
        <service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Model\Channel\ChannelModelTransformer" decorates="prestashop.data_transformer.model.channel">
            <argument type="service" id=".inner"/>
            <argument type="service" id="prestashop.repository.currency"/>
        </service>


        <!-- RESOURCE TRANSFORMER -->
        <service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Resource\AdminUser\AdminUserResourceTransformer" decorates="prestashop.data_transformer.resource.admin_user">
            <argument type="service" id=".inner"/>
            <argument type="service" id="sylius.security.password_updater"/>
            <argument type="service" id="sylius.repository.locale"/>
        </service>

        <service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Resource\Channel\ChannelResourceTransformer" decorates="prestashop.data_transformer.resource.channel">
            <argument type="service" id=".inner"/>
            <argument type="service" id="sylius.repository.locale"/>
            <argument type="service" id="sylius.repository.currency"/>
            <argument type="service" id="parameter_bag"/>
        </service>

        <service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Resource\Lang\LangResourceTransformer" decorates="prestashop.data_transformer.resource.locale">
            <argument type="service" id=".inner"/>
        </service>

      <!--  <service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Resource\Product\ProductResourceTransformer" decorates="prestashop.data_transformer.resource.product">
            <argument type="service" id=".inner"/>
        </service>-->

        <!--<service id="Jgrasp\PrestashopMigrationPlugin\DataTransformer\Resource\Taxon\TaxonResourceTransformer" decorates="prestashop.data_transformer.resource.taxon">
            <argument type="service" id=".inner"/>
            <argument type="service" id="sylius.generator.taxon_slug"/>
            <argument type="service" id="sylius.repository.taxon"/>
        </service>-->

        <!-- RESOURCE IMPORTER -->
        <service id="Jgrasp\PrestashopMigrationPlugin\Importer\ResourceImporterCollection" >
            <argument type="tagged_iterator" tag="prestashop.importer"/>
        </service>

    </services>
</container>
